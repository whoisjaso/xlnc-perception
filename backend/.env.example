# Divine Agentic Intelligence System - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED - Core Configuration
# ============================================

# Server Port
PORT=3000
NODE_ENV=development

# PostgreSQL Database URL
DATABASE_URL=postgresql://postgres:password@localhost:5432/xlnc_divine

# JWT Secret (min 32 characters) - Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-chars

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# ============================================
# RETELL AI - Voice Agent Platform
# ============================================

# Webhook signature verification (from Retell dashboard)
RETELL_WEBHOOK_SECRET=

# ============================================
# ANTHROPIC - Claude AI for Intent/Follow-ups
# ============================================

ANTHROPIC_API_KEY=

# ============================================
# ZOHO CRM - Lead Management
# ============================================
# Get these from: https://api-console.zoho.com/

ZOHO_CRM_CLIENT_ID=
ZOHO_CRM_CLIENT_SECRET=
ZOHO_CRM_REFRESH_TOKEN=

# ============================================
# ZOHO CALENDAR - Appointment Booking
# ============================================
# Get these from: https://api-console.zoho.com/
# Calendar ID found in Zoho Calendar settings

ZOHO_CALENDAR_CLIENT_ID=
ZOHO_CALENDAR_CLIENT_SECRET=
ZOHO_CALENDAR_REFRESH_TOKEN=
ZOHO_CALENDAR_ID=

# ============================================
# TEXT180 - SMS Provider
# ============================================
# Get these from your Text180 account dashboard

TEXT180_AUTH_KEY=
TEXT180_ACCOUNT_ID=
TEXT180_SHORT_CODE=
TEXT180_KEYWORD=

# ============================================
# TWILIO - Backup SMS Provider (Optional)
# ============================================
# Get these from: https://console.twilio.com/

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ============================================
# SENDGRID - Email Delivery
# ============================================
# Get API key from: https://app.sendgrid.com/settings/api_keys

SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Smart Tax Nation

# ============================================
# ZOHO MAIL - SMTP Email (Alternative)
# ============================================

ZOHO_SMTP_HOST=smtp.zoho.com
ZOHO_SMTP_PORT=587
ZOHO_SMTP_USER=
ZOHO_SMTP_PASS=
ZOHO_SMTP_FROM=

# ============================================
# SLACK - Error Alerts & Monitoring
# ============================================
# Create incoming webhook at: https://api.slack.com/messaging/webhooks

SLACK_WEBHOOK_URL=

# ============================================
# MULTI-CHANNEL ALERTING
# ============================================
# Enable email/SMS alerts for critical errors
# Severity routing: critical->Slack+Email+SMS, error->Slack+Email, warning/info->Slack

ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_RECIPIENTS=          # Comma-separated emails (e.g., admin@example.com,ops@example.com)
ALERT_SMS_ENABLED=false
ALERT_SMS_RECIPIENTS=            # Comma-separated phone numbers (e.g., +15551234567)
ALERT_THROTTLE_MINUTES=15        # Digest interval to prevent alert fatigue

# ============================================
# OPTIONAL - Additional Services
# ============================================

# Redis for caching/queues (optional - falls back to in-memory)
REDIS_URL=

# n8n webhook URL (legacy - can be removed)
N8N_BASE_URL=

# Encryption key for sensitive data (min 32 chars)
ENCRYPTION_KEY=

# Sentry for error tracking
SENTRY_DSN=

# Google Gemini (alternative AI)
GEMINI_API_KEY=
